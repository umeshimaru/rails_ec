       <!-- Section-->
        <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                <% @products.each do |product| %>
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <%= image_tag product.image, class: "img-fluid ratio ratio-1x1", style: "height: 200px; width: auto; object-fit:cover; " if product.image.attached? %>

                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder"><%=product.name%></h5>
                                    <!-- Product price-->
                                    <%= "#{product.price}円" %>
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">カートに追加</a></div>
                            </div>
                        </div>
                    </div>
                    <% end %>
        </section>
      