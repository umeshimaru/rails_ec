  <% @products.each do |product| %>
  <div class="col mb-5">
    <div class="card h-100",style="width: 100px; ">
      <%= link_to  product_path(product.id) do %>
        <div>
          <%= image_tag product.image,  style:"height: 200px; width: 100%;object-fit: cover;  " if product.image.attached? %>
        </div>
      <%end%>
      <div class="card-body p-4">
        <div class="text-center">
          <h5 class="fw-bolder"><%= link_to product.name,product_path(product.id)%></h5>
          <%= "#{product.price}円" %>
        </div>
      </div>
      <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
        <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">カートに追加</a></div>
      </div>
  <% if admin? %>
  <div class="container" style="display:flex;justify-content: center;margin-bottom:5px;">
  <%= link_to "編集", edit_admin_product_path(product), class: "btn btn-success" %>
  <%= button_to "削除", admin_product_path(product), method: :delete,  class: "btn btn-danger" ,style: "margin-left:5px;" %>
  </div>
<% end %>
    </div>
  </div>
<% end %>
